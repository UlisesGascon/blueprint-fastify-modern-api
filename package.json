{
  "name": "blueprint-fastify-modern-api",
  "version": "1.0.0",
  "description": "Blueprint for developing Fastify Modern API",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "test": "jest --verbose",
    "test:coverage": "jest --verbose  --coverage",
    "test:watch": "jest --verbose --watchAll",
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UlisesGascon/blueprint-fastify-modern-api.git"
  },
  "author": "Ulises Gascon",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/UlisesGascon/blueprint-fastify-modern-api/issues"
  },
  "homepage": "https://github.com/UlisesGascon/blueprint-fastify-modern-api#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "devDependencies": {
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "standard": "^16.0.3",
    "supertest": "^6.0.1"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "fastify": "^3.9.2"
  }
}
